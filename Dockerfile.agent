# ======================================================
# Dockerfile.agent â€“ Per-repo agent container
# code-server + GitHub Copilot + Copilot SDK
# ======================================================
FROM ubuntu:22.04 AS base

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# System packages
RUN apt-get update && apt-get install -y --no-install-recommends \
        python3.11 \
        python3.11-venv \
        python3-pip \
        git \
        curl \
        wget \
        jq \
        ca-certificates \
        gnupg \
        build-essential \
        openssh-client \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20 LTS
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && npm install -g yarn pnpm \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI
# Use pre-downloaded GPG key (curl to cli.github.com may fail in BuildKit network)
COPY githubcli-archive-keyring.gpg /usr/share/keyrings/githubcli-archive-keyring.gpg
RUN echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" \
        > /etc/apt/sources.list.d/github-cli.list \
    && apt-get update && apt-get install -y gh \
    && rm -rf /var/lib/apt/lists/*

# Install code-server from pre-downloaded deb (124MB self-contained binary, no deps)
COPY code-server_amd64.deb /tmp/code-server.deb
RUN dpkg -i /tmp/code-server.deb && rm /tmp/code-server.deb

# ---- Python venv for agent ----
RUN python3.11 -m venv /opt/agent-venv
ENV PATH="/opt/agent-venv/bin:$PATH"

COPY agent_requirements.txt /tmp/agent_requirements.txt
# Copy pre-downloaded wheels (offline install - no network needed in BuildKit)
COPY agent-wheels/ /agent-wheels/
RUN pip install --upgrade pip -q && \
    pip install --no-index --find-links /agent-wheels -r /tmp/agent_requirements.txt

# ---- cloudflared ----
# Pre-downloaded on host (github.com releases not reachable from Docker build network)
COPY cloudflared-linux-amd64 /usr/local/bin/cloudflared
RUN chmod +x /usr/local/bin/cloudflared

# ---- Non-root user ----
RUN groupadd -r agent && useradd -r -g agent -d /home/agent -m -s /bin/bash agent

# code-server config dir
RUN mkdir -p /home/agent/.config/code-server \
    && chown -R agent:agent /home/agent

COPY --chown=agent:agent agent_entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

COPY --chown=agent:agent app/services/copilot_agent_runner.py /app/agent_runner.py

WORKDIR /workspace

USER agent

EXPOSE 8080 3000 5000

CMD ["/app/entrypoint.sh"]
